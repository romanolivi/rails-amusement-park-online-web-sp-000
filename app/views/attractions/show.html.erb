<!DOCTYPE html>
<html>
<head>
<title>RailsAmusementPark</title>
</head>

<body>

<div class="center">
    <div class="info">
    <p>
        <strong>Name:</strong>
        <%= @attraction.name %> 
    </p>

    <p>
        <strong>Total Number of Users:</strong>
        <%= @attraction.users.count %> 
    </p>

    <p>
        <strong>Ticket Requirement:</strong>
        <%= @attraction.tickets %> 
    </p>

    <p>
        <strong>Height Requirement:</strong>
        <%= @attraction.min_height %> 
    </p>

    <p>
        <strong>Nausea Rating:</strong>
        <%= @attraction.nausea_rating %> 
    </p>

    <p>
        <strong>Happiness Rating:</strong>
        <%= @attraction.happiness_rating %> 
    </p>

    <% if current_user.admin == true %> 
        <p><%= link_to 'Edit Attraction', edit_attraction_path(@attraction) %></p>
    <% else %> 
        <%= form_with(url: "/rides", method: "post") do |a| %> 
            <%= a.hidden_field :user_id, :value => current_user.id %> 
            <%= a.hidden_field :attraction_id, :value => @attraction.id %>
            <%= a.submit "Go on this ride" %> 
        <% end %> 
    <% end %> 
</body>

</html>